#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
void longestSubArraySum(vector<int> arr,int n,int k)
{
    int l=0,max=0,sum;
    if(n==0)
    {
        cout<<"There is no array";
        return;
    }
    if(n==1)
    {
        if(arr[0]==k)
        {
            cout<<endl<<"1";
            return;
        }
        cout<<"No element can make value equal to sum";
        return;
    }
    
    for(int i=0;i<n;i++)
    {
        sum = arr[i];
        l++;
        if(sum == k)
        {
            if(l>max)
            {
                    max = l;
            }
        }
        for(int j=i+1;j<n-1;j++)
        {
            sum = sum + arr[j];
            l++;
            if(sum == k)
            {
                if(l>max)
                {
                    max = l;
                }
            }
        }
        l = 0;
    }
    cout<<endl<<max;
}
int main()
{
    vector<int> arr;
    int n,k,a;
    
    cout<<"Enter the size of an array: ";
    cin>>n;
    
    cout<<"Enter the elements of an array: ";
    for(int i=0;i<n;i++)
    {
        cin>>a;
        arr.push_back(a);
    }
    cout<<endl<<"Enter the sum value: ";
    cin>>k;
    longestSubArraySum(arr,n,k);
    return 0;
}
