#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
void twosum(vector<int> &arr,int n,int x)
{
    for(int i=0;i<n;i++)
    {
        if(arr[i]==x)
        {
            cout<<i+1<<" position"<<endl;
            cout<<arr[i]<<" = "<<x<<endl;
            return;
        }
        for(int j=i;j<n;j++)
        {
            if(j==i)
            {
                continue;
            }
            if(arr[i]+arr[j]==x)
            {
                cout<<i+1<<" "<<j+1<<" position"<<endl;
                cout<<arr[i]<<" + "<<arr[j]<<" = "<<x<<endl;
                return;
            }
        }
    }
}
int main()
{
    vector<int> arr,arr1;
    int a,n,x;
    
    cout<<"Enter size of first array: ";
    cin>>n;
    cout<<"Enter elements of first array: ";
    for(int i=0;i<n;i++)
    {
        cin>>a;
        arr.push_back(a);
    }
    cout<<"Enter sum: ";
    cin>>x;
    twosum(arr,n,x);
    return 0;
}
