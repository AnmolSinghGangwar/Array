#include<iostream>
#include<vector>
using namespace std;
bool isSorted(vector<int> &arr,int n)
{
    for(int i=0;i<n-1;i++)
    {
        if(arr[i] > arr[i+1])
        {
            return false;
        }
    }
    return true;
}
int main()
{
    vector<int> arr;
    int n;
    int a;
    bool res;
    
    cout<<"Enter arrray size: ";
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>a;
        arr.push_back(a);
    }
    res = isSorted(arr,n);
    if(res == true)
        cout<<"Given array is sorted";
    else
        cout<<"Given array is not sorted";
}
